		"jasmine-core": "^3.4.0",
		"jasmine-spec-reporter": "^4.2.1",
		"karma": "^6.3.16",
		"karma-chrome-launcher": "^2.2.0",
		"karma-cli": "^2.0.0",
		"karma-coverage-istanbul-reporter": "^2.0.5",
		"karma-jasmine": "^2.0.1",
		"karma-jasmine-html-reporter": "^1.4.2",
		"lerna": "^3.13.4",
		"lerna-changelog": "^0.8.2",
		"lighthouse": "^5.0.0",
		"lint-staged": "^8.1.5",
		"npm-check-updates": "^3.1.8",
		"prettier": "^1.17.0",
		"prettier-tslint": "^0.4.2",
