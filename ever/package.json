	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --no-verify --staged"
		}
	},
	"engines": {
		"node": ">=10.14.0",
		"yarn": ">=1.13.0"
	},
	"snyk": true
}
